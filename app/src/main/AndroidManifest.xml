<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.o3selab.smartlock">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name=".activities.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 액티비티 들 -->
        <activity
            android:name=".activities.LoadingActivity"
            android:theme="@style/NoFrame">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/NoFrame" />
        <activity
            android:name=".activities.ShakeyConnectActivity"
            android:theme="@style/NoFrame" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/NoFrame" />
        <activity
            android:name=".activities.SetupActivity"
            android:theme="@style/NoFrame" />
        <activity
            android:name=".activities.ShakeyInfoActivity"
            android:theme="@style/NoFrame" />
        <activity
            android:name=".activities.DeviceListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />

        <!-- 로그인 부분 -->
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginInAppBrowserActivity"
            android:label="OAuth2.0 In-app" />

        <!-- 서비스 -->
        <service
            android:name=".service.BTCTemplateService"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <!-- 브로드 캐스트 리시버 -->
        <receiver android:name=".service.ServiceMonitoring$ServiceMonitoringBR" />

        <activity android:name=".activities.NoticeActivity"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>